{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="container">
		<form onsubmit="getValue()"><input type="text" id="number"/><input type="submit" value="Submit" ></form>
		<div class="player-0">
			<div class="player-name-0">Player 1</div>
			<div class="current-scores" id="current-scores-0">0</div>
			<div class="card-total-scores">Total scores
				<div class="total-scores" id="total-scores-0">0</div>
			</div>
		</div>

		<div class="player-1">
			<div class="player-name-1">Player 2</div>
			<div class="current-scores" id="current-scores-1">0</div>
			<div class="card-total-scores">Total scores
				<div class="total-scores" id="total-scores-1">0</div>
			</div>
		</div>

		<img src="../img/dice-3.png" alt="Dice" class="dice">

		<div class="buttons">
			<button class="btn-new-game" id="new">New game</button>
			<button class="btn-roll-dice">Roll dice</button>
			<button class="btn-hold">Hold</button>
		</div>

	</div>
	<script type="text/javascript" src="{{ asset('../js/pig_game.js') }}"></script>
{% endblock %}
